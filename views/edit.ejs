<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= foundBlog.title %></div>
  <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" id="title" value="<%= foundBlog.title %>" required>
    </div>
    <div class="field">
      <label for="image">Image</label>
      <input type="text" name="blog[image]" id="image" value="<%= foundBlog.image %>" required>
    </div>
    <div class="field">
      <label for="body">Blog Content</label>
      <textarea name="blog[body]" id="body" required><%= foundBlog.body %></textarea>
    </div>
    <input class="ui violet big basic button" type="submit">
  </form>
</div>

<% include partials/footer %>
